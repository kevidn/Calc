<MyRoot>:
    calc_field: calc_field

    # Set background color to red
    canvas.before:
        Color:
            rgba: 0.25098039215686275, 0.25098039215686275, 0.25098039215686275, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Vertical Screen
    orientation: 'vertical'

    # Widget Text Input
    TextInput:
        id: calc_field
        size_hint: (1, 0.3)
        readonly: True
        disabled: True
        font_size: 64

    # Grid Layout
    GridLayout:
        rows: 4
        columns: 4
        padding: 10
        spacing: 4
        height: 400
        size_hint: (1, 0.5)

        # Button Number 1
        Button:
            text: "1"
            font_size: 26
            on_press: root.calc_symbol('1')

        # Button Number 2
        Button:
            text: "2"
            font_size: 26
            on_press: root.calc_symbol('2')

        # Button Number 3
        Button:
            text: "3"
            font_size: 26
            on_press: root.calc_symbol('3')

        # Button +
        Button:
            text: "+"
            font_size: 26
            on_press: root.calc_symbol('+')

        # Button Number 4
        Button:
            text: "4"
            font_size: 26
            on_press: root.calc_symbol('4')

        # Button Number 5
        Button:
            text: "5"
            font_size: 26
            on_press: root.calc_symbol('5')

        # Button Number 6
        Button:
            text: "6"
            font_size: 26
            on_press: root.calc_symbol('6')

        # Button -
        Button:
            text: "-"
            font_size: 26
            on_press: root.calc_symbol('-')

        # Button Number 7
        Button:
            text: "7"
            font_size: 26
            on_press: root.calc_symbol('7')

        # Button Number 8
        Button:
            text: "8"
            font_size: 26
            on_press: root.calc_symbol('8')

        # Button Number 9
        Button:
            text: "9"
            font_size: 26
            on_press: root.calc_symbol('9')

        # Button *
        Button:
            text: "*"
            font_size: 26
            on_press: root.calc_symbol('*')

        # Button (
        Button:
            text: "("
            font_size: 26
            on_press: root.calc_symbol('(')

        # Button Number 0
        Button:
            text: "0"
            font_size: 26
            on_press: root.calc_symbol('0')

        # Button Number )
        Button:
            text: ")"
            font_size: 26
            on_press: root.calc_symbol(')')

        # Button Number /
        Button:
            text: "/"
            font_size: 26
            on_press: root.calc_symbol('/')
    
    # Box Layout
    BoxLayout:
        orientation: 'horizontal'
        padding: 7
        spacing: 7
        height: 100
        size_hint: (1, 0.2)

        # Button .
        Button:
            text: "."
            font_size: 26
            on_press: root.calc_symbol('.')

        # Button C to clear function
        Button:
            text: "Clear"
            font_size: 26
            on_press: root.clear()

        # Button = to get result
        Button:
            text: "="
            font_size: 26
            on_press: root.get_result( )